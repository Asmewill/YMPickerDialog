<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:gravity="center_horizontal"
    tools:context="com.myapp.main.MainActivity">

    <Button
        android:id="@+id/btn_show_date_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示可以自定义数据范围的年月控件"/>
    <Button
        android:id="@+id/btn_show_single_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示可以自定义数据的单个滑轮"/>

    <Button
        android:id="@+id/btn_show_double_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示可以自定义数据的二个滑轮"/>
    <Button
        android:id="@+id/btn_show_three_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示可以自定义数据的二个滑轮"/>

</LinearLayout>
